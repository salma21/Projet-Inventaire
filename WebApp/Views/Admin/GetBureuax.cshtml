@model IEnumerable<Domain.Bureau>


<!-- Start Row -->
<div class="row">
    <!-- Start Panel -->
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Liste Des Bureaux
                <ul class="panel-tools">
                    <li><a class="icon minimise-tool"><i class="fa fa-minus"></i></a></li>
                    <li><a class="icon expand-tool"><i class="fa fa-expand"></i></a></li>
                    <li><a class="icon closed-tool"><i class="fa fa-times"></i></a></li>
                </ul>
                <hr />
            </div>
            <div class="panel-body table-responsive">
                <div style="text-align:center;"><a href="~/Export/ExportBureau"><span class="icon color7"><i class="fa fa-file-excel-o"></i></span>&nbsp; &nbsp;  Export Vers Fichier Excel</a></div> 
                <table id="example0" class="table display">
                    <thead>
                        <tr>
                            <th>Code Bureau</th>
                            <th>Code à barre</th>
                            <th>Description</th>
                            
                            <th>Étage</th>
                            <th>Batiment</th>
                        
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center">@item.id</td>
                                <td class="center">@item.Code_a_barre</td>
                                <td class="center">@item.Description</td>
                               
                                <td class="center">@item.Etage.description</td>
                                <td class="center">@item.Etage.Batiment.description</td>
                             
                                <td>
@if (@Session["Role"].ToString() == "ADMIN")
{
                                   <a href="@Url.Action("EditBureaux", new { id = item.Id_bureau })">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>
}
                                 </td>

                            </tr>


                        }
                    </tbody>
                </table>
                <br /><p>
@if (@Session["Role"].ToString() == "ADMIN")
{
                    @Html.ActionLink("Ajouter un nouveau Bureau", "CreateBureaux")
}
                </p>

            </div>



            </div>



        </div>
    </div>
