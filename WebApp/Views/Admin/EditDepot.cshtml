
@model Domain.Depot

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Modification Dépôt
            </div>
            <div class="panel-body">



                <div class="panel panel-default">


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.idDelegation)
                        @Html.HiddenFor(model => model.idPays)
                        @Html.HiddenFor(model => model.idGouvernorat)
                        @Html.HiddenFor(model => model.idRegion)
                        @Html.HiddenFor(model => model.IdDepot)
                        <div class="form-horizontal">
                            <h4>Dépôt</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Désignation </label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.libelle, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.libelle, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Pays </label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Delegation.Gouvernorat.Region.Pays.libelle, new { @class = "form-control", required = "", disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.Delegation.Gouvernorat.Region.Pays.libelle, String.Empty, new { @class = "test" })

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Region </label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Delegation.Gouvernorat.Region.libelle, new { @class = "form-control", required = "", disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.Delegation.Gouvernorat.Region.libelle, String.Empty, new { @class = "test" })


                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Gouvernorat </label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Delegation.Gouvernorat.libelle, new { @class = "form-control", required = "", disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.Delegation.Gouvernorat.libelle, String.Empty, new { @class = "test" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Ville </label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Delegation.libelle, new { @class = "form-control", required = "", disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.Delegation.libelle, String.Empty, new { @class = "test" })

                                </div>
                            </div>



                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Adresse </label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.Rue, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Rue, "", new { @class = "text-danger" })
                                </div>
                            </div>




                        </div>
                        <div style="text-align: center;">
                            <input type="submit" value="Valider" class="btn btn-default" />

                            <button type="reset" class="btn btn-white">@Html.ActionLink("Annuler", "getDepots")</button>

                        </div>
                   



                    }


                </div>

                <div>
                    @Html.ActionLink("Liste des dépôts", "getDepots")
                </div>



            </div>
        </div>
    </div>
</div>

