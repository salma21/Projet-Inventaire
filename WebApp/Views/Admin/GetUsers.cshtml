@model IEnumerable<Domain.Utilisateur>


<div class="inner">
    <!-- Start Row -->
    <div class="row">
        <!-- Start Panel -->
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-title">
                    Liste des Utlisateurs
                    <ul class="panel-tools">
                        <li><a class="icon minimise-tool"><i class="fa fa-minus"></i></a></li>
                        <li><a class="icon expand-tool"><i class="fa fa-expand"></i></a></li>
                        <li><a class="icon closed-tool"><i class="fa fa-times"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body table-responsive">
                    <div style="text-align:center;"><a href="~/Export/ExportUtilisateur"><span class="icon color7"><i class="fa fa-file-excel-o"></i></span>&nbsp; &nbsp;  Export Vers Fichier Excel</a></div> 
                    <table id="example0" class="table display">
                        <thead>
                            <tr>
                               
                                <th>Login</th>

                                @*<th>Password</th>*@
                                <th>Nom</th>
                                <th>Prénom</th>
                               
                                <th>Matricule</th>
                                <th>Service</th>
                                <th>État</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                   
                                    <td class="center">@item.login</td>
                                    @*<td class="center">@item.motDePasse</td>*@
                                    <td class="center">@item.Personnel.nom</td>
                                    <td class="center">@item.Personnel.prenom</td>
                                   
                                    <td class="center">@item.Personnel.Matricule</td>
                                    <td class="center">@item.Personnel.ServiceD.Libelle</td>
                                    <td class="center">@item.etatUtilisateur</td>
                                    <td class="center">@item.Personnel.Role.libelle</td>

                                    <td>
@if (@Session["Role"].ToString() == "ADMIN")
{
                                        <a href="@Url.Action("EditUser", new { id = item.id })">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>

}

                                    </td>

                                </tr>

                              



                            }
                        </tbody>
                    </table>
                    <br /><p>
@if (@Session["Role"].ToString() == "ADMIN")
{
                        @Html.ActionLink("Ajouter un nouveau utilisateur", "CreateUsers")
}
                    </p>

                </div>
            </div>
        </div>


    </div>
</div>
