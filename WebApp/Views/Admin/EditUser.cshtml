@model Domain.Utilisateur



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Modification Utilisateur
            </div>
            <div class="panel-body">



                <div class="panel panel-default">

                    @using (@Html.BeginForm("EditUser", "Admin", FormMethod.Post,
new { @id = "frmId", @class = "fieldset-form" }))
                    {

                        <div class="form-horizontal">
                            <h4>Modification Utilisateur</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            
                            <div class="form-group">
                                <label class="control-label col-lg-4">Personnel</label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Personnel.Matricule, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Login </label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.login, new { @class = "form-control", required = "" })

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Password</label>
                                <div class="col-lg-6">

                                    @Html.TextBoxFor(model => model.motDePasse, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.motDePasse, String.Empty, new { @class = "test" })
                                </div>
                            </div>


                          


                            <div class="form-group">
                                <label class="control-label col-lg-4">Etat</label>
                                <div class="col-lg-6">
                                    @Html.EditorFor(model => model.etatUtilisateur, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.etatUtilisateur, String.Empty, new { @class = "test" })
                                </div>
                            </div>

                           
                        
                        </div>
                        <div style="text-align: center;">
                            <input type="submit" value="Valider" class="btn btn-default" />

                            <button type="reset" class="btn btn-white">Annuler</button>

                        </div>

                    }


                </div>

                <div>
                    @Html.ActionLink("Afficher la liste des Utlisateurs", "GetUsers")
                </div>

            </div>
        </div>
    </div>
</div>