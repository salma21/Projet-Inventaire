@model Domain.Contrat_assurance


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">

                <h4 class="title" color="#58666e" font-weight="bold">Modification Contrat Assurance</h4>
                <ol class="breadcrumb"></ol>


                <div class="panel-body">
                    <!-- Start Modal Code -->
                    <!-- End Moda Code -->
                </div>
                <ul class="panel-tools">
                    <li><a class="icon minimise-tool"><i class="fa fa-minus"></i></a></li>
                    <li><a class="icon expand-tool"><i class="fa fa-expand"></i></a></li>
                    <li><a class="icon closed-tool"><i class="fa fa-times"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="panel panel-default">
                        <fieldset>

                            <legend>Contrat d'Assurance</legend>

                            <div class="form-group">
                                <div class="col-md-4">
                                    <label class="col-sm-4 control-label form-label">Référence (N° Contrat)</label>

                                    <div class="col-sm-8">

                                        @Html.AntiForgeryToken()

                                    </div>

                                </div>


                                <div class="col-md-4">
                                    <label class="col-sm-4 control-label form-label">Societe</label>

                                    <div class="col-sm-8">

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    </div>

                                </div>
                                <div class="col-md-4">
                                    <label class="col-sm-4 control-label form-label"> Type</label>

                                    <div class="col-sm-8">

                                        @{
                                            @Html.LabelFor(model => model.idDelegation, "idDelegation", htmlAttributes: new { @class = "control-label col-md-2" })
                                            @Html.DropDownList("idDelegation", null, htmlAttributes: new { @class = "form-control" })
                                        }


                                    </div>

                                </div>

                            </div>
                            <div class="form-group">

                                <br />



                            </div>

                            <div class="form-group">


                                <div class="col-md-4">
                                    <label class="col-sm-4 control-label form-label">Coût</label>

                                    <div class="col-sm-8">

                                        @Html.ValidationMessageFor(model => model.idDelegation, "", new { @class = "text-danger" })

                                    </div>

                                </div>


                                <div class="col-md-4">
                                    <label class="col-sm-4 control-label form-label">Date Debut </label>

                                    <div class="col-sm-8">
                                        @Html.EditorFor(model => model.Id_societe_assurance)
                            

                                    </div>

                                </div>
                                <div class="col-md-4">
                                    <label class="col-sm-4 control-label form-label">Date Fin</label>

                                    <div class="col-sm-8">

                                        @Html.EditorFor(model => model.Id_contrat_assurance)
                                      

                                    </div>

                                </div>

                            </div>





                        </fieldset>

                        <br />
                        <fieldset>

                            <legend>Localisation</legend>

                            <div class="form-group">
                                <div class="col-md-4">
                                    <label class="col-sm-4 control-label form-label"> Ville</label>

                                    <div class="col-sm-8">
                                        @Html.LabelFor(model => model.Type_assurance, htmlAttributes: new { @class = "control-label col-md-2" })


                                    </div>

                                </div>
                            </div>

                        </fieldset>
                        <br>


                        <div style="text-align: center;">

                            <input type="submit" value="Valider" class="btn btn-default" /> &nbsp; &nbsp; &nbsp;
                            <button type="reset" class="btn btn-white">Annuler</button>


                        </div>







                    </div>
                                            }
            </div>

            <p>
                @Html.EditorFor(model => model.Type_assurance, new { htmlAttributes = new { @class = "form-control" } })
            </p>
        </div>

    </div>

</div>
