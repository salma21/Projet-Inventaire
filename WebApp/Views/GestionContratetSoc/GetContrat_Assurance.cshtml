@model IEnumerable<Domain.Contrat_assurance>

<!-- Start Row -->
<div class="row">
    <!-- Start Panel -->
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">

                Liste des Contrats d'Assurance

                <ul class="panel-tools">
                    <li><a class="icon minimise-tool"><i class="fa fa-minus"></i></a></li>
                    <li><a class="icon expand-tool"><i class="fa fa-expand"></i></a></li>
                    <li><a class="icon closed-tool"><i class="fa fa-times"></i></a></li>
                </ul>
            </div>
            <hr />
            <div class="panel-body table-responsive">
                <table id="example0" class="table display">
                    <thead>
                        <tr>

                            
                            <th>Délégation</th>
                            <th>Sociéte</th>
                            <th>Assurance</th>
                            <th>Date Debut</th>
                            <th>Date Fin</th>
                            <th>Coût</th>
                           
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                           
                            <th>Délégation</th>
                            <th>Sociéte</th>
                            <th>Assurance</th>
                            <th>Date Debut</th>
                            <th>Date Fin</th>
                            <th>Coût</th>

                            <th>Action</th>
                           
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                               
                                <td class="center">@item.Societe_assurance.Delegation.libelle</td>
                                <td class="center">@item.Societe_assurance.Libelle</td>
                                <td class="center">@item.Type_assurance</td>
                                
                                <td class="center">@item.Date_debut</td>
                                <td class="center">@item.Date_fin</td>
                                <td class="center">@item.Cout</td>
                               

                                <td>
                                    <a href="@Url.Action("EditContrat_Assurance", new { id = item.Id_contrat_assurance })">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>
                                    <a href="@Url.Action("DetailsContrat_Assurance", new { id = item.Id_contrat_assurance })">&nbsp;&nbsp;<i class="fa fa-folder-open" title="Détails"></i></a>
                                </td>

                            </tr>


                        }
                    </tbody>
                </table>
                <br /><p>
                    @Html.ActionLink("Ajouter un nouveau Contrat d'Assurance", "CreateContrat_Assurance")
                </p>

            </div>

            

        </div>

       

    </div>
</div>

<script>
    $(document).tooltip();
</script>

