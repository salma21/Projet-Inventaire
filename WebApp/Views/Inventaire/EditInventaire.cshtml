@model Domain.Inventaire

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
              Modification Inventaire
            </div>
            <div class="panel-body">



                <div class="panel panel-default">




                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Inventaire</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id_inventaire)
                            @Html.HiddenFor(model => model.Date)

                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Nom Inventaire </label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.Nom_, new { @class = "form-control", required = "True" })
                                    @Html.ValidationMessageFor(model => model.Nom_, String.Empty, new { @class = "test" })
                                </div>
                            </div>



                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Type </label>
                                <div class="col-lg-6">
                                    @Html.EditorFor(model => model.Type, new { @class = "form-control", required = "True" })
                                    @Html.ValidationMessageFor(model => model.Type, String.Empty, new { @class = "test" })
                                </div>
                            </div>

                            <div style="text-align: center;">

                              
                                        <input type="submit" value="Save" class="btn btn-default" />
                                        <button type="reset" class="btn btn-white">@Html.ActionLink("Annuler", "GetInventaire")</button>
                                    
                            </div>
                        </div>
                    }


                </div>

                <div>
                    @Html.ActionLink("Liste des inventaires", "GetInventaire")
                </div>

            </div>
        </div>
    </div>
</div>