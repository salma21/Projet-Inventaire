@model IEnumerable<Domain.Personnel>

@{
    ViewBag.Title = "GetPersonnel";
}



<div class="row">
    <!-- Start Panel -->
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Liste Du Personnel
            </div>
            <div class="panel-body table-responsive">
                <table id="example0" class="table display">
                    <thead>
                        <tr>
                            <th>Matricule</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>CIN</th>
                            <th>Date de naissance</th>
                            <th>Direction</th>
                            <th>Service</th>
                            <th>Role</th>
                           
@if (@Session["Role"].ToString() == "ADMIN")
{
                            <th>Action</th>
}
                        </tr>
                    </thead>

                  

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td class="center">@item.Matricule</td>
                                <td class="center">@item.nom</td>
                                <td class="center">@item.prenom</td>
                                <td class="center">@item.Email</td>
                                <td class="center">@item.CIN</td>
                                <td class="center">@item.Date_anniv</td>
                                <td class="center">@item.Id_direction</td>
                                <td class="center">@item.Id_service</td>
                                <td class="center">@item.Role.libelle</td>
                                @*<td class="center">@item.Batiment.Organisation.libelle</td>
                                <td class="center">@item.Batiment.description</td>
                                <td class="center">@item.Batiment.Delegation.libelle</td>
                                <td class="center">@item.Batiment.Delegation.Gouvernorat.Region.libelle</td>
                                <td class="center">@item.Batiment.Delegation.Gouvernorat.libelle</td>
                                <td class="center">@item.Batiment.Delegation.Gouvernorat.Region.Pays.libelle</td>*@


                                <td>
@if (@Session["Role"].ToString() == "ADMIN")
{
    
                                    <a href="@Url.Action("Edit", new { id = item.id_pers })">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>

}  </td>

                            </tr>


                        }
                    </tbody>
                </table>
                <br /><p>
@if (@Session["Role"].ToString() == "ADMIN")
{
                    @Html.ActionLink("Ajouter un nouveau personnel", "CreatePersonnel")
}
                </p>

            </div>
        </div>
    </div>


</div>





<script>
    $(document).tooltip();
</script>