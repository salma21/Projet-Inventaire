@model Domain.Modele




<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Modèle
            </div>
            <div class="panel-body">



                <div class="panel panel-default">


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4> Modification Modèle</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                         
                            @Html.HiddenFor(model => model.id_sous_categorie)
                            @Html.HiddenFor(model => model.Id_categorie)
                            @Html.HiddenFor(model => model.IdModele)

                            <div class="form-group">
                                <label class="control-label col-lg-4">Categorie</label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Sous_categorie.Categorie.libelle, new { @class = "form-control", required = "", disabled = "disabled" })

                                </div>
                            </div>

                                <div class="form-group">
                                    <label class="control-label col-lg-4"> Sous-Categorie</label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(model => model.Sous_categorie.libelle, new { @class = "form-control", required = "", disabled = "disabled" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-lg-4">Desigantion  </label>
                                    <div class="col-lg-6">
                                        @Html.EditorFor(model => model.libelle, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.libelle, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            
                            <div style="text-align: center;">
                                <input type="submit" value="Valider" class="btn btn-default" />

                                <button type="reset" class="btn btn-white">@Html.ActionLink("Annuler", "getModele")</button>

                            </div>

                        </div>
                    }


                </div>

                <div>
                    @Html.ActionLink("Afficher la liste des sous categories", "getSousCategorie")
                </div>

            </div>
        </div>
    </div>
</div>