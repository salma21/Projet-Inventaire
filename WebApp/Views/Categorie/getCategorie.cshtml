@model IEnumerable<Domain.Categorie>

@{
    ViewBag.Title = "getCategorie";
}

<h2>Liste des categories materiels</h2>


<!-- Start Row -->
<div class="row">
    <!-- Start Panel -->
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
            
            </div>
            <div class="panel-body table-responsive">
                <div style="text-align:center;"><a href="~/Export/ExportCategorie"><span class="icon color7"><i class="fa fa-file-excel-o"></i></span>&nbsp; &nbsp;  Export Vers Fichier Excel</a></div> 
                <table id="example0" class="table display">
                    <thead>
                        <tr>
                           
                            <th>Nom categorie</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                         
                            <th>Nom categorie</th>
                             <th>Description</th>
                            <th>Action</th>

                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                            
                                <td class="center">@item.libelle</td>
                                <td class="center">@item.Description </td>


                                <td>
@if (@Session["Role"].ToString() == "ADMIN")
{

                                    <a href="@Url.Action("editCategorie", new { id = item.Id_categorie })">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>
}
                                </td>

                            </tr>


                        }
                    </tbody>
                </table>
                <br /><p>
@if (@Session["Role"].ToString() == "ADMIN")
{
                    @Html.ActionLink("Ajouter une nouvelle Categorie", "createCategorie")
}
                </p>

            </div>
        </div>
    </div>


</div>





<script>
    $(document).tooltip();
</script>