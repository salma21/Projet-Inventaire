@model IEnumerable<Domain.Sous_modele>

<h2>Liste des sous modeles</h2>


<!-- Start Row -->
<div class="row">
    <!-- Start Panel -->
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">

            </div>
            <div class="panel-body table-responsive">
                <div style="text-align:center;"><a href="~/Export/ExportSous_modele"><span class="icon color7"><i class="fa fa-file-excel-o"></i></span>&nbsp; &nbsp;  Export Vers Fichier Excel</a></div> 
                <table id="example0" class="table display">
                    <thead>
                        <tr>

                            <th>Categorie</th>
                            <th>Sous catégorie</th>
                            <th>Modele</th>
                            <th>Libelle</th>
                            <th>Description </th>
                            <th>Action</th>
                        </tr>
                    </thead>



                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td class="center">@item.Modele.Sous_categorie.Categorie.libelle </td>
                                <td class="center">@item.Modele.Sous_categorie.libelle </td>
                                
                                <td class="center">@item.Modele.libelle </td>
                                <td class="center">@item.Libelle </td>
                                <td class="center">@item.Description </td>

                                <td>
                                    @if (@Session["Role"].ToString() == "ADMIN")
                                    {

                                        <a href="@Url.Action("EditSousModele", new { id = item.Id_sous_Modele })">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>
                                    }
                                </td>

                            </tr>


                        }
                    </tbody>
                </table>
                <br /><p>
                    @if (@Session["Role"].ToString() == "ADMIN")
                    {
                        @Html.ActionLink("Ajouter un nouveaux Sous Modele", "createSousModele")
                    }
                </p>

            </div>
        </div>
    </div>


</div>
