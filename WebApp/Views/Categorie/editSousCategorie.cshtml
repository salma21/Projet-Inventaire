                            @Html.HiddenFor(model => model.id_sous_categorie)

                            <div class="form-group">
                                <label class="control-label col-lg-4">Desigantion  </label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.libelle, new { @class = "form-control", required = "" })
