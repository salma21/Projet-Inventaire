@model Domain.Sous_categorie


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Modification Sous-Categorie 
            </div>
            <div class="panel-body">



                <div class="panel panel-default">


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Edit Sous Catégorie</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.id_sous_categorie)
                            @Html.HiddenFor(model => model.Id_categorie)

                            <div class="form-group">
                                <label class="control-label col-lg-4">Desigantion  </label>
                                <div class="col-lg-6">
                                    @Html.EditorFor(model => model.libelle, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.libelle, String.Empty, new { @class = "test" })

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Categorie</label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Categorie.Description, new { @class = "form-control", required = "", disabled = "disabled" })
                                  


                                </div>
                            </div>
                            <div style="text-align: center;">
                                <input type="submit" value="Valider" class="btn btn-default" />

                                <button type="reset" class="btn btn-white">@Html.ActionLink("Annuler", "getSousCategorie")</button>

                            </div>
                           
                        </div>
                    }


                </div>

                <div>
                    @Html.ActionLink("Afficher la liste des sous categories", "getSousCategorie")
                </div>

            </div>
        </div>
    </div>
</div>