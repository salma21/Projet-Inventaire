@model Domain.Role

<script language="javascript" type="text/javascript">
 function GetBatT(_delegId) {

     var url = "/Role/OpenPopupRole/";

        $.ajax({
            url: url,
            data: { delegid: _delegId },
            cache: false,
            type: "POST",
            success: function (data) {

                if (data != "") {
                    alert(data)
                }


            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });

    }
</script>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Rôle

            </div>
            <div class="panel-body">

               
                <div class="panel panel-default">

                    @using (@Html.BeginForm("CreateRole", "Role", FormMethod.Post,
new { @id = "frmId", @class = "fieldset-form" }))
                    {

                        <div class="form-horizontal">
                            <h4> Ajout de  Rôle
 </h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            



                            <div class="form-group">
                                <label class="control-label col-lg-4">Nom Rôle</label>
                                <div class="col-lg-6">
                                    @Html.EditorFor(model => model.libelle, new { htmlAttributes = new { @id = "btnpopu", @class = "form-control", @onchange = "javascript:GetBatT(this.value)" } })
                                    @Html.ValidationMessageFor(model => model.libelle, String.Empty, new { @class = "test" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Description</label>
                                <div class="col-lg-6">
                            
                                   @Html.EditorFor(model => model.description, new { @class = "form-control", required = "" })
                                @Html.ValidationMessageFor(model => model.description, String.Empty, new { @class = "test" })
                                </div>
                            </div>

                        </div>
                        <div style="text-align: center;">
                            <input type="submit" value="Valider" class="btn btn-default" />

                            <button type="reset" class="btn btn-white">@Html.ActionLink("Annuler", "GetRole")</button>

                        </div>

                    }


                </div>

                <div>
                    @Html.ActionLink("Afficher la liste des Rôles", "GetRole")
                </div>

            </div>
        </div>
    </div>
</div>


