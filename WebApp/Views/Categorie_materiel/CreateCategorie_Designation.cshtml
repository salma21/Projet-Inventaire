@model Domain.Sous_categorie

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Ajout de sous categorie 
            </div>
            <div class="panel-body">



                <div class="panel panel-default">


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Categorie Designation</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="control-label col-lg-4">Desigantion  </label>
                                <div class="col-lg-6">
                                    @Html.EditorFor(model => model.libelle, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.libelle, String.Empty, new { @class = "test" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Categorie  </label>
                                <div class="col-lg-6">
                                    @Html.DropDownListFor(m => m.Id_categorie, (SelectList)ViewData["cat"], "--Choisir--", new { @id = "ddlstate", @class = "form-control", required = "True", @onchange = "javascript:GetCity(this.value);" })


                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Valider" class="btn btn-default" />&nbsp;&nbsp;
                                    <button type="reset" class="btn btn-white">@Html.ActionLink("Annuler", "GetCategorie_Designation")</button>
                                </div>
                            </div>
                        </div>
                    }


                </div>

                <div>
                    @Html.ActionLink("Afficher la liste des sous categories", "GetCategorie_Designation")
                </div>

            </div>
        </div>
    </div>
</div>