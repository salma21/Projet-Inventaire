@model IEnumerable<Domain.Sous_categorie>

<h2>Liste des categories Designation</h2>


<!-- Start Row -->
<div class="row">
    <!-- Start Panel -->
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">

            </div>
            <div class="panel-body table-responsive">
                <table id="example0" class="table display">
                    <thead>
                        <tr>

                            <th>Id</th>
                            <th>Designation</th>
                            <th>Categorie</th>
                            <th>Modele</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>

                            <th>Id</th>
                            <th>Designation</th>
                            <th>Categorie</th>
                            <th>Modele</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td class="center">@item.IdSousCategorie</td>
                                <td class="center">@item.CategorieDesignation.libelle </td>
                                <td class="center">@item.CategorieDesignation.Categorie.libelle </td>
                                <td class="center">@item.libelle </td>


                                <td>
                                    @if (@Session["Role"].ToString() == "ADMIN")
                                    {

                                        <a href="@Url.Action("EditCategorie_Modele", new { id = item.id_categorie_Designation })">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>
                                    }
                                </td>

                            </tr>


                        }
                    </tbody>
                </table>
                <br /><p>
                    @if (@Session["Role"].ToString() == "ADMIN")
                    {
                        @Html.ActionLink("Ajouter un nouveaux Modele", "CreateCategorie_Modele")
                    }
                </p>

            </div>
        </div>
    </div>


</div>
