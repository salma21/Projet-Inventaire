@model Domain.Sous_categorie

@{


    List<string> listModele = new List<string>();

}
<link type="text/css" href="../../Content/Site.css" rel="stylesheet" />
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
<script language="javascript" type="text/javascript">
    function GetCity(_stateId) {
        var procemessage = "<option value='0'>Encours...</option>";
        $("#ddlcity").html(procemessage).show();
        var url = "/Categorie/GetModeleBySousCat/";

        $.ajax({
            url: url,
            data: { stateid: _stateId },
            cache: false,
            type: "POST",
            success: function (data) {
                var markup = "<option value='0'>--Choisir--</option>";
                for (var x = 0; x < data.length; x++) {
                    markup += "<option value=" + data[x].Value + ">" + data[x].Text + "</option>";
                }
                $("#ddlcity").html(markup).show();
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });

    }
</script>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Ajout de categorie materiel
            </div>
            <div class="panel-body">



                <div class="panel panel-default">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Sous_categorie</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.IdSousCategorie)

                            <div class="form-group">
                                <label class="control-label col-lg-4">Categorie  </label>
                                <div class="col-lg-6">
                                    @Html.DropDownListFor(m => m.Id_categorie, (SelectList)ViewData["cat"], "--Choisir--", new { @id = "ddlstate", @class = "form-control", required = "True", @onchange = "javascript:GetCity(this.value);" })


                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Sous Categorie  </label>
                                <div class="col-lg-6">
                                    @Html.DropDownListFor(m => m.id_categorie_Designation, new SelectList(listModele), "--Choisir--", new { @id = "ddlcity", @class = "form-control", required = "True" })


                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Modele  </label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.libelle, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.libelle, String.Empty, new { @class = "test" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                </div>

                <div>
                    @Html.ActionLink("Afficher la liste des Model", "GetCategorie_Model")
                </div>

            </div>
        </div>
    </div>
</div>