@model IEnumerable<Domain.Fournisseur>

<div class="row">
    <!-- Start Panel -->
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Liste des Fournisseurs

                <ul class="panel-tools">
                    <li><a class="icon minimise-tool"><i class="fa fa-minus"></i></a></li>
                    <li><a class="icon expand-tool"><i class="fa fa-expand"></i></a></li>
                    <li><a class="icon closed-tool"><i class="fa fa-times"></i></a></li>
                </ul>
            </div>
            <div class="panel-body table-responsive">
                <div style="text-align:center;"><a href="~/Export/ExportFournisseur"><span class="icon color7"><i class="fa fa-file-excel-o"></i></span>&nbsp; &nbsp;  Export Vers Fichier Excel</a></div> 
                <table id="example0" class="table display">
                    <thead>
                        <tr>
                            <th>Nom  </th>
                            <th>Adresse  </th>
                            <th>Tél</th>
                            <th>Fax</th>
                            <th>Email </th>
                            <th>Autre </th>
                            <th>Région </th>
                            <th>Gouvernorat</th>
                           <th>Délégation </th>
                        
                            <th>Localité </th>
                            <th>Code postale</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td class="center">@item.Nom</td>
                                <td class="center">@item.Rue</td>
                                <td class="center">@item.Tel</td>
                                <td class="center">@item.Fax</td>
                                <td class="center">@item.Email</td>
                                <td class="center">@item.Commentaire</td>
                                <td class="center">@item.Delegation.Gouvernorat.Region.libelle</td>
                                <td class="center">@item.Delegation.Gouvernorat.libelle</td>
                                <td class="center">@item.Delegation.libelle</td>
                                <td class="center">@item.localité</td>
                                <td class="center">@item.code_postale</td>
                                <td>
@if (@Session["Role"].ToString() == "ADMIN")
{
                                    <a href="@Url.Action("EditFournisseur", new { id = item.Id_fournisseur})">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>

}  </td>

                            </tr>


                        }
                    </tbody>
                </table>
                <br /><p>
@if (@Session["Role"].ToString() == "ADMIN")
{
                    @Html.ActionLink("Ajouter un nouveaux Fournisseur", "CreateFournisseur")
}
                </p>

            </div>
        </div>
    </div>


</div>





<script>
    $(document).tooltip();
</script>