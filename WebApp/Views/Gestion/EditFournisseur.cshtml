@model Domain.Fournisseur

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Ajout Fournisseur
            </div>
            <div class="panel-body">



                <div class="panel panel-default">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id_fournisseur)
                        <div class="form-horizontal">
                            <h4>Fournisseur</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Désignation</label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.Nom, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.Nom, String.Empty, new { @class = "test" })
                                </div>
                            </div>

                           

                           

                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Télephone</label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.Tel, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.Tel, String.Empty, new { @class = "test" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Fax</label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.Fax, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.Fax, String.Empty, new { @class = "test" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Email</label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.Email, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.Email, String.Empty, new { @class = "test" })
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Autre</label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.Commentaire, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.Commentaire, String.Empty, new { @class = "test" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Adresse</label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.Rue, new { @class = "form-control", required = "" })
                                    @Html.ValidationMessageFor(model => model.Rue, String.Empty, new { @class = "test" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Pays </label>
                                <div class="col-lg-6">
                                    @Html.DropDownListFor(model => model.idPays, (SelectList)ViewData["pays"], "--Choisir--", new { @class = "form-control", required = "" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Région </label>
                                <div class="col-lg-6">
                                    @Html.DropDownListFor(model => model.idRegion, (SelectList)ViewData["region"], "--Choisir--", new { @class = "form-control", required = "" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Gouvernerat </label>
                                <div class="col-lg-6">
                                    @Html.DropDownListFor(model => model.idGouvernorat, (SelectList)ViewData["gouv"], "--Choisir--", new { @class = "form-control", required = "" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Delegation </label>
                                <div class="col-lg-6">
                                    @Html.DropDownListFor(model => model.idDelegation, (SelectList)ViewData["delegations"], "--Choisir--", new { @class = "form-control", required = "" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Localité </label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.localité, new { htmlAttributes = new { @id = "btnpopu", @class = "form-control", @onchange = "javascript:GetBatT(this.value)" } })
                                    @Html.ValidationMessageFor(model => model.localité, String.Empty, new { @class = "test" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Code postal</label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.code_postale, new { @class = "form-control", required = "True" })
                                    @Html.ValidationMessageFor(model => model.code_postale, String.Empty, new { @class = "test" })
                                </div>
                            </div>

                        </div>
                        <div style="text-align: center;">
                            <input type="submit" value="Valider" class="btn btn-default" />
                            <button type="reset" class="btn btn-white">@Html.ActionLink("Annuler", "GetFournisseur")</button>


                        </div>
                    }
                </div>



            </div>
        </div>
    </div>
</div>
