@model Domain.Gouvernorat
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Modification de gouvernorat
            </div>
            <div class="panel-body">



                <div class="panel panel-default">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()


                        <div class="form-horizontal">
                            <h4>Gouvernorat</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.idPays)

                            @Html.HiddenFor(model => model.idRegion)

                            @Html.HiddenFor(model => model.idGouvernorat)

                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Nom Gouvernorat </label>
                                <div class="col-lg-6">

                                    @Html.EditorFor(model => model.libelle, new { @class = "form-control", required = "True" })
                                    @Html.ValidationMessageFor(model => model.libelle, String.Empty, new { @class = "test" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Pays </label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Region.Pays.libelle, new { @class = "form-control", disabled = "disabled" })
                                    @* @Html.DropDownListFor(m => m.idPays, (SelectList)ViewData["pays"], "--Choisir--", new { @id = "ddlstate", @style = "width:300px; height: 30px; color: black", required = "True", @onchange = "javascript:GetCity(this.value);" })*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Région </label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Region.libelle, new { @class = "form-control", disabled = "disabled" })
                                    @* @Html.TextBoxFor(model => model.Region.libelle, new { @class = "form-control", disabled = "disabled" })*@
                                    @* @Html.DropDownListFor(listRegion, m => m.idRegion, new  { disabled = "disabled" })*@




                                </div>
                            </div>



                        </div>
                        <div style="text-align: center;">
                            <input type="submit" value="Valider" class="btn btn-default" />

                            <button type="reset" class="btn btn-white">@Html.ActionLink("Annuler", "GetGouvernorat")</button>

                        </div>


                    }

                    <div>

                        @Html.ActionLink("Liste des gouvernorats ", "GetGouvernorat")

                    </div>
                </div>
            </div>
        </div>
    </div>
