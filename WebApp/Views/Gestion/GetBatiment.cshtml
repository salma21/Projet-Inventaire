@model IEnumerable<Domain.Batiment>

<div class="row">
    <!-- Start Panel -->
    <div class="col-md-12">

        <div class="panel panel-default">

            <div class="panel-title">
                Liste des Bâtiments

                <ul class="panel-tools">
                    <li><a class="icon minimise-tool"><i class="fa fa-minus"></i></a></li>
                    <li><a class="icon expand-tool"><i class="fa fa-expand"></i></a></li>
                    <li><a class="icon closed-tool"><i class="fa fa-times"></i></a></li>

                </ul>

            </div>

            <div class="panel-body table-responsive">
                <div style="text-align:center;"><a href="~/Export/ExportBatiment"><span class="icon color7"><i class="fa fa-file-excel-o"></i></span>&nbsp; &nbsp;  Export Vers Fichier Excel</a></div>

                <table id="example0" class="table display">

                    <thead>
                        <tr>
                            <th>Code à barres</th>
                            <th>Désignation</th>

                            <th>Adresse</th>
                            <th>Localité</th>
                            <th>Code postal</th>
                            <th>Organisation</th>
                            <th>Délégation </th>
                            <th>Gouvernorat </th>
                          
                            <th>Région </th>
                            <th>Pays </th>
                            <th>Action</th>
                        </tr>
                    </thead>



                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center">@item.code_a_barre</td>
                                <td class="center">@item.description</td>

                                <td class="center">@item.code</td>
                                <td class="center">@item.localité</td>
                                <td class="center">@item.code_postale</td>
                                <td class="center">@item.Organisation.libelle</td>
                                <td class="center">@item.Delegation.libelle</td>
                                <td class="center">@item.Delegation.Gouvernorat.libelle</td>
                               
                                <td class="center">@item.Delegation.Gouvernorat.Region.libelle</td>
                                <td class="center">@item.Delegation.Gouvernorat.Region.Pays.libelle</td>

                                <td>
                                    @if (@Session["Role"].ToString() == "ADMIN")
                                    {

                                        <a href="@Url.Action("EditBatiment", new { id = item.idBatiment })">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>
                                        <a href="@Url.Action("DeleteBatiment", new { id = item.idBatiment })">&nbsp;<i class="fa fa-delete" title="Supprimer"></i></a>

                                    }
                                </td>

                            </tr>


                        }
                    </tbody>
                </table>
                <br /><p>
                    @if (@Session["Role"].ToString() == "ADMIN")
                    {
                        @Html.ActionLink("Ajouter un nouveau bâtiment", "CreateBatiment")
                    }
                </p>

            </div>
        </div>
    </div>


</div>





<script>
    $(document).tooltip();
</script>