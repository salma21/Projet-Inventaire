@model Domain.Achat

<div class="row ">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Détails Achat

            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="control-label col-lg-4" style="font-style:oblique;">Numéro de facture </label>
                            <div class="col-lg-6">

                                @Html.EditorFor(model => model.Num_facture, new { @class = "form-control", @readonly = "readonly" })

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-4" style="font-style:oblique;">Numéro de commande</label>
                            <div class="col-lg-6">

                                @Html.EditorFor(model => model.Num_commande, new { @class = "form-control", @readonly = "readonly" })

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-4" style="font-style:oblique;">Numéro de livraison </label>
                            <div class="col-lg-6">

                                @Html.EditorFor(model => model.Num_livraison, new { @class = "form-control", @readonly = "readonly" })

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-4" style="font-style:oblique;">Date Livraison </label>
                            <div class="col-lg-6">

                                @Html.EditorFor(model => model.Date_livraison, new { @class = "form-control", @readonly = "readonly" })

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-4" style="font-style:oblique;">Date d'Achat </label>
                            <div class="col-lg-6">

                                @Html.EditorFor(model => model.Date_d_achat, new { @class = "form-control", @readonly = "readonly" })
                         
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-4" style="font-style:oblique;">Prix d'Achat</label>
                            <div class="col-lg-6">

                                @Html.EditorFor(model => model.Prix_d_achat, new { @class = "form-control", @readonly = "readonly" })
                         
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-4" style="font-style:oblique;">Fournisseurs </label>
                            <div class="col-lg-6">

                                @Html.EditorFor(model => model.Fournisseur.Nom, new { @class = "form-control", @readonly = "readonly" })
                            
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-4" style="font-style:oblique;">Région </label>
                            <div class="col-lg-6">

                                @Html.EditorFor(model => model.Fournisseur.Delegation.Gouvernorat.Region.libelle, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.Fournisseur.Delegation.Gouvernorat.Region.libelle, String.Empty, new { @class = "test" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-lg-4" style="font-style:oblique;">Délégation </label>
                            <div class="col-lg-6">

                                @Html.EditorFor(model => model.Fournisseur.Delegation.libelle, new { @class = "form-control", @readonly = "readonly" })
                              @*  @Html.ValidationMessageFor(model.Fournisseur.Delegation.libelle, String.Empty, new { @class = "test" })*@
                            </div>
                        </div>

                    }
                </div>
                <p>
                    @Html.ActionLink("Retour", "GetAchat")
                </p>
            </div>
        </div>
    </div>
</div>