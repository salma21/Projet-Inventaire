@model Domain.Contrat


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">

                <h4 class="title" color="#58666e" font-weight="bold"> Edit Contrat Maintenance</h4>



                <div class="panel-body">
                    <!-- Start Modal Code -->
                    <!-- End Moda Code -->
                </div>
                <ul class="panel-tools">
                    <li><a class="icon minimise-tool"><i class="fa fa-minus"></i></a></li>
                    <li><a class="icon expand-tool"><i class="fa fa-expand"></i></a></li>
                    <li><a class="icon closed-tool"><i class="fa fa-times"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                       
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id_contrat)
                        <div class="panel panel-default">
                            <fieldset>

                                <div class="col-md-4">
                                    <label class="col-sm-4 control-label form-label">Code à barres</label>

                                    <div class="col-sm-8">

                                        @Html.EditorFor(model => model.Code_a_barre, new { @class = "form-control", required = "" })
                                        @Html.ValidationMessageFor(model => model.Code_a_barre, String.Empty, new { @class = "test" })

                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-4">
                                            <label class="col-sm-4 control-label form-label">N° Contrat</label>

                                            <div class="col-md-8">

                                                @Html.EditorFor(model => model.Num, new { @class = "form-control", required = "" })
                                                @Html.ValidationMessageFor(model => model.Num, String.Empty, new { @class = "test" })
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <label class="col-sm-4 control-label form-label">Sociéte</label>

                                            <div class="col-sm-8">

                                                @Html.DropDownListFor(model => model.Id_fournisseur, (SelectList)ViewData["societemain"], "--Choisir--", new { @class = "form-control", required = "" })




                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <label class="col-sm-4 control-label form-label">Type</label>

                                            <div class="col-sm-8">

                                                @Html.EditorFor(model => model.Type_Contrat, new { @class = "form-control", required = "" })
                                                @Html.ValidationMessageFor(model => model.Type_Contrat, String.Empty, new { @class = "test" })

                                            </div>
                                        </div>


                                        <br /><br />

                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-4">
                                            <label class="col-sm-4 control-label form-label">Coût</label>

                                            <div class="col-sm-8">

                                                @Html.EditorFor(model => model.Cout, new { @class = "form-control", required = "" })
                                                @Html.ValidationMessageFor(model => model.Cout, String.Empty, new { @class = "test" })
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="col-sm-4 control-label form-label">Date Debut </label>

                                            <div class="col-sm-8">

                                                @Html.EditorFor(model => model.Date_debut, new { @class = "form-control", required = "" })
                                                @Html.ValidationMessageFor(model => model.Date_debut, String.Empty, new { @class = "test" })
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="col-sm-4 control-label form-label">Date Fin</label>

                                            <div class="col-sm-8">

                                                @Html.EditorFor(model => model.Date_fin, new { @class = "form-control", required = "" })
                                                @Html.ValidationMessageFor(model => model.Date_fin, String.Empty, new { @class = "test" })
                                            </div>
                                        </div>
                                    </div>



</fieldset>
                            <br />


                            <br>








                            <div style="text-align: center;">

                                <input type="submit" value="Valider" class="btn btn-default" /> &nbsp; &nbsp; &nbsp;
                                <button type="reset" class="btn btn-white">@Html.ActionLink("Annuler", "GetContrat")</button>




                            </div>







                        </div>
                    </div>
                }


                <p>
                    @Html.ActionLink("Liste des contrats de maintenance", "GetContrat_Maintenance")
                </p>

            </div>

        </div>

    </div>
</div>

